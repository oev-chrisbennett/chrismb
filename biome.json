{
    "$schema": "https://biomejs.dev/schemas/1.9.1/schema.json",
    "vcs": {
        "enabled": false,
        "clientKind": "git",
        "useIgnoreFile": false
    },
    "files": {
        "ignoreUnknown": false,
        "ignore": []
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4
    },
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "double",
            "semicolons": "asNeeded"
        }
    },
    "json": {
        "formatter": {
            "enabled": true
        }
    },
    "css": {
        "formatter": {
            "enabled": true
        }
    },
    "overrides": [
        {
            "include": ["*.astro"],
            "linter": {
                "rules": {
                    "style": {
                        "useImportType": "off"
                    }
                }
            },
            "formatter": {
                "indentStyle": "space"
            }
        }
    ]
}
